//We know we need a loop to see how many candy the runner gets based on miles
//Starting point of the loop is 0 miles
//The loop will stop when the runner reaches 6 miles
//The loop knows when to stop when we add a stopping point
//The increment is 2 because every 2 miles, a candy is given out
//Variables are miles and candy

var numCandy = 0;
var numCandySportsMode = 0;

function candyTime(numMiles){
    for (var i = 0; i < numMiles; i+=2){
        if (numMiles > 6){
            numMiles = 6;
        };
        numCandy++;
        
    } return numCandy;
};

function candyTimeSportsMode(numMiles, mph){
    for (var i = 0; i < numMiles; i+=2){
        if (mph > 5.5){
            if (numMiles > 6){
                numMiles = 6;
            };  numCandySportsMode++;
        } else {
            numCandySportsMode = 0;
        };
        
        
    } return numCandySportsMode;
}


console.log(candyTime(20));
console.log(candyTimeSportsMode(4,5.6));
